<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ssog.mapper.BoardMapper">
    
    <select id="boardList" resultType="kr.ssog.domain.test"><!-- id = BoardMapper.java의 메서드 이름과 동일해야함 boardList -->
    	select * from test
	</select>
	
    <insert id="boardInsert" parameterType="kr.ssog.domain.test">
	    insert into test
	    values(test_idx.nextval,#{boardCate},#{title},#{writer},#{filename},#{filepath},#{content},sysdate)
    </insert>
    <select id="boardContent" resultType="kr.ssog.domain.test" parameterType="int">
    <!-- select는 묶어주는 정보가 필요함! -> resultType, 1개만 받아줄때는 파라미터타입 생략가능parameterType="int"-->
	    select * from test where idx=#{idx}
    </select>
    
    <update id="boardUpdate" parameterType="kr.ssog.domain.test">
        update test set title=#{title},contents=#{contents} where idx=#{idx}
    </update>
    
</mapper>